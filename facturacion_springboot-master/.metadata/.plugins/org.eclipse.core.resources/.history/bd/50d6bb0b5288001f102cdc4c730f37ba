	<script>
		function updateTotal() {
		    let total = 0;
		    const rows = document.querySelectorAll("tbody tr");

		    rows.forEach(row => {
		        const price = parseFloat(row.querySelector(".precio").textContent); // Obtenemos el precio desde el texto de la celda
		        const quantity = parseInt(row.querySelector(".cantidad").value); // Cantidad desde el input

		        // Comprobar si price y quantity son números válidos
		        if (!isNaN(price) && !isNaN(quantity)) {
		            total += price * quantity; // Actualiza el total
		        }
		    });

		    // Actualiza el total en la vista
		    document.querySelector("#gran_total").textContent = total.toFixed(2);
		}

	</script>

</body>
